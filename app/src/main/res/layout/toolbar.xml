<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="@color/Facebook"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_toolbar_camera"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:scaleType="centerInside"
            android:background="@color/Facebook"
            android:src="@drawable/ic_toolbar_camera" />

        <EditText
            android:id="@+id/et_toolbar_search"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="text"
            android:hint="검색"
            android:background="@drawable/bg_search_edittext"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <ImageButton
            android:id="@+id/btn_toolbar_messenger"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/et_toolbar_search"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:scaleType="centerInside"
            android:background="@color/Facebook"
            android:src="@drawable/ic_toolbar_messenger" />

    </RelativeLayout>
    
</android.support.v7.widget.Toolbar>